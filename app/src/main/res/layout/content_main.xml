<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/key_0"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="0"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/key_dot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_multiply" />

    <Button
        android:id="@+id/key_1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="1"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_multiply"
        app:layout_constraintEnd_toStartOf="@+id/key_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_power" />

    <Button
        android:id="@+id/key_2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="2"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_0"
        app:layout_constraintEnd_toStartOf="@+id/key_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_1" />

    <Button
        android:id="@+id/key_3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="3"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_dot"
        app:layout_constraintEnd_toStartOf="@+id/key_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_2" />

    <Button
        android:id="@+id/key_4"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="4"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_1"
        app:layout_constraintEnd_toStartOf="@+id/key_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_delete" />

    <Button
        android:id="@+id/key_5"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="5"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_2"
        app:layout_constraintEnd_toStartOf="@+id/key_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_4" />

    <Button
        android:id="@+id/key_6"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="6"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_3"
        app:layout_constraintEnd_toStartOf="@+id/key_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_5" />

    <Button
        android:id="@+id/key_7"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="7"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_4"
        app:layout_constraintEnd_toStartOf="@+id/key_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_reset" />

    <Button
        android:id="@+id/key_8"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="8"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_5"
        app:layout_constraintEnd_toStartOf="@+id/key_9"
        app:layout_constraintStart_toEndOf="@+id/key_7" />

    <Button
        android:id="@+id/key_9"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="9"
        android:textSize="24sp"
        app:backgroundTint="#AF4422"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_6"
        app:layout_constraintEnd_toStartOf="@+id/key_equal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_8" />

    <Button
        android:id="@+id/key_reset"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="C"
        android:textSize="24sp"
        app:backgroundTint="#515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_delete"
        app:layout_constraintEnd_toStartOf="@+id/key_7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/key_delete"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:textSize="9dp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:icon="@android:drawable/ic_input_delete"
        app:layout_constraintBottom_toTopOf="@+id/key_power"
        app:layout_constraintEnd_toStartOf="@+id/key_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/key_power"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="^"
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_divide"
        app:layout_constraintEnd_toStartOf="@+id/key_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/key_divide"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="/"
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/key_multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/key_multiply"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="X"
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/key_0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_divide" />

    <Button
        android:id="@+id/key_equal"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="="
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_9" />

    <Button
        android:id="@+id/key_plus"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="+"
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_6" />

    <Button
        android:id="@+id/key_minus"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-12dp"
        android:text="-"
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/key_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_3" />

    <Button
        android:id="@+id/key_percent"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="%"
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_dot" />

    <Button
        android:id="@+id/key_dot"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="."
        android:textSize="24sp"
        app:backgroundTint="#FF515151"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/key_percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/key_0" />

    <TextView
        android:id="@+id/editTextNumber"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:autoSizeMaxTextSize="42sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/operatorText"
        android:layout_width="100dp"
        android:layout_height="74dp"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/key_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintVertical_bias="0.183" />

    <TextView
        android:id="@+id/result_number"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/key_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/operatorText"
        app:layout_constraintVertical_bias="0.375" />
</androidx.constraintlayout.widget.ConstraintLayout>